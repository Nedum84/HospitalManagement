<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/design_border_grey"
    android:layout_margin="4dp"
    android:id="@+id/drugWrapper"
    android:gravity="center_vertical"
    android:padding="6dp"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/drugName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorDarkBlue"
            android:text="Paracetamol"/>
        <TextView
            android:id="@+id/drugDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Relieves headache and every form of wahala"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/drugRemoveFromCartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/design_border_radius_grey"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_remove_black_24dp"
            tools:ignore="ContentDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/colorRed"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Remove"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/drugAddToCartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="@drawable/design_border_radius_grey"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
            tools:ignore="ContentDescription"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/colorDarkBlue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Add"/>
    </LinearLayout>

</LinearLayout>