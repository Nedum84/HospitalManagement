<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register New DOCTOR"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#777"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bdbdbd"
            android:layout_marginBottom="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/design_border_radius_grey"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR's NAME"
                android:textAllCaps="true"
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />
            <EditText
                android:id="@+id/regDocName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:hint="write here..."
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/design_border_radius_grey"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR's Phone"
                android:textAllCaps="true"
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />
            <EditText
                android:id="@+id/regDocPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="5dp"
                android:inputType="phone"
                android:textSize="16sp"
                android:hint="write here..."
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/design_border_radius_grey"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOCTOR's Photo Url"
                android:textAllCaps="true"
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />
            <EditText
                android:id="@+id/regDocPhotoUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="5dp"
                android:inputType="textUri"
                android:textSize="16sp"
                android:hint="write here..."
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:background="@drawable/design_border_radius_grey"
                android:orientation="vertical"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/regDocSpecialitySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/design_border_radius_grey"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Years of Experience"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#777"
                    android:textColorHint="#c4c4c4"
                    tools:ignore="Autofill" />
                <EditText
                    android:id="@+id/regDocYearsOfExp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="16sp"
                    android:hint="Write here..."
                    android:textColor="#777"
                    android:textColorHint="#c4c4c4"
                    tools:ignore="Autofill" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/design_border_radius_grey"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textAllCaps="true"
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />
            <EditText
                android:id="@+id/regDocPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:hint="write here..."
                android:textColor="#777"
                android:textColorHint="#c4c4c4"
                tools:ignore="Autofill" />

        </LinearLayout>

        <com.github.florent37.shapeofview.shapes.CutCornerView
            android:id="@+id/regDocBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_cutCorner_bottomLeftSize="3dp"
            app:shape_cutCorner_topLeftSize="3dp"
            app:shape_cutCorner_topRightSize="3dp"
            app:shape_cutCorner_bottomRightSize="3dp"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/payment_total_amount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:background="#2CBD4E"
                android:textStyle="bold"
                android:padding="16dp"/>

        </com.github.florent37.shapeofview.shapes.CutCornerView>


    </LinearLayout>
</ScrollView>